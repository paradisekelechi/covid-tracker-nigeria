{
  "root": true,
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["prettier", "airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "object-curly-newline": "off",
    "arrow-parens": [2, "as-needed"],
    "import/prefer-default-export": "off",
    "max-len": ["error", { "code": 120 }]
  }
}
